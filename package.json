{
  "name": "hot-shopping-server",
  "version": "1.0.0",
  "engines": {
    "node": "14.15.5",
    "npm": "7.5.4"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "stripe": "^8.144.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "nodemon": "^1.19.1"
  }
}
